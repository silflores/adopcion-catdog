<%- include('../layouts/cabecera.ejs') %>

<style>
    body {
        background-image: url('/images/fondo4.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        color: white;
    }
</style>

<style>
    .card-img-container {
        overflow: hidden;
        height: 300px; /* Ajusta el tamaño de la imagen según tus necesidades */
    }

    .card-img-top {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .container {
        text-align: center;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 20px;
        border-radius: 10px;
    }

    .arrow {
        font-size: 3rem;
        margin-top: 20px;
        animation: bounce 2s infinite;
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-15px);
        }
        60% {
            transform: translateY(-10px);
        }
    }

    .adopt-text {
        font-size: 2rem; /* Tamaño ajustado para "Adopta con Amor" */
    }
</style>

<br/>
<br/>
<a href="/animales/ingresar" class="btn btn-primary" type="button">Ingresar una mascota</a>
<br/>
<br/>

<div class="row">
    <% for (let animal of animales) { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-img-container">
                    <img class="card-img-top" src="/images/<%= animal.foto %>" alt="<%= animal.nombre %>">
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= animal.nombre %></h5>
                    <p class="card-text">
                        <strong>ID:</strong> <%= animal.id %><br>
                        <strong>Tipo:</strong> <%= animal.tipo %><br>
                        <strong>Sexo:</strong> <%= animal.sexo %><br>
                        <strong>Edad:</strong> <%= animal.edad %><br>
                        <!-- No mostrar el correo electrónico -->
                    </p>
                    <!-- Botones de editar y borrar -->
                    <div class="d-flex mt-3" role="group">
                        <form method="get" action="/animales/editar/<%= animal.id %>" class="me-2">
                            <button class="btn btn-warning" type="submit">Editar</button>
                        </form>
                        <form method="post" action="/animales/eliminar/<%= animal.id %>">
                            <button class="btn btn-danger" type="submit">Borrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include('../layouts/pie.ejs') %>
