<%- include('../layouts/cabecera.ejs') %>

<br>

<div class="card">
    <div class="card-header">
        Formulario editor
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar Datos</h5>
        <p class="card-text"><form method="post" action="..//actualizar/" enctype="multipart/form-data">

            <input type="hidden" name="id" value="<%= animal.id %>">
        
            <div class="form-group">
                <label for="my-input">NOMBRE:</label>
                <input id="my-input" value="<%= animal.nombre %>" class="form-control" type="text" name="nombre">
            </div>
        
            <div class="form-group">
                <label for="my-input">TIPO:</label>
                <input id="my-input" value="<%= animal.tipo %>" class="form-control" type="text" name="tipo">
            </div>
        
            <div class="form-group">
                <label for="my-input">SEXO:</label>
                <input id="my-input" value="<%= animal.sexo %>" class="form-control" type="text" name="sexo">
            </div>
        
            <div class="form-group">
                <label for="my-input">EDAD:</label>
                <input id="my-input" value="<%= animal.edad %>" class="form-control" type="text" name="edad">
            </div>
        
            <br>
            <div class="form-group">
                <label for="foto">FOTO:</label>
                <img class="img-thumbnail" src="../../images/<%= animal.foto %>"  width="150" alt="">
                <input id="my-input" class="form-control-file" type="file" name="foto">
               
            </div>
            <br>
        
            <div class="form-group">
                <label for="my-input">EMAIL:</label>
                <input id="my-input" value="<%= animal.email %>" class="form-control" type="text" name="email">
            </div>
        
            <br>
        
            <button class="btn btn-warning" type="submit">Actualizar</button>
            <a class="btn btn-primary" href="/animales">Cancelar</a>
            
        </form></p>
    </div>
</div>



<%- include('../layouts/pie.ejs') %>
